{
  "name": "postmon",
  "version": "0.0.0",
  "author": "Kenta Lee",
  "main": "electron/electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "electron": "wait-on http://localhost:3000/favicon.ico && echo \"starting electron\" && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "cross-env ELECTRON=true vite build",
    "app:build": "yarn build:for:electron && yarn electron:builder"
  },
  "build": {
    "appId": "im.kenta.postmon",
    "productName": "Postmon",
    "copyright": "Copyright Â© 2021 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  },
  "dependencies": {
    "ant-design-vue": "^3.0.0-alpha.7",
    "sanitize.css": "^13.0.0",
    "vue": "^3.2.16",
    "vue-axios": "^3.3.7",
    "vue-router": "^4.0.3",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^1.9.3",
    "axios": "^0.24.0",
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "pug": "^3.0.2",
    "sass": "^1.43.4",
    "typescript": "^4.4.4",
    "vite": "^2.6.4",
    "vitejs-plugin-electron": "^0.1.5",
    "vue-tsc": "^0.28.10",
    "wait-on": "^6.0.0"
  }
}
